<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tomas.android_app">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Routines"
            android:label="AutoHome - Routines"
            android:parentActivityName="com.example.tomas.android_app.MainActivity" >
        </activity>
        <activity
            android:name=".RoomActivity"
            android:label="AutoHome - Room" >
        </activity>
        <activity
            android:name=".SelectRoomToDisplay"
            android:label="AutoHome - Favorite Rooms"
            android:parentActivityName="com.example.tomas.android_app.MainActivity">
        </activity>
        <activity
            android:name=".Settings"
            android:label="AutoHome - Settings"
            android:parentActivityName="com.example.tomas.android_app.MainActivity">
        </activity>
        <activity
            android:name=".Notifications"
            android:label="AutoHome - Notifications"
            android:parentActivityName="com.example.tomas.android_app.MainActivity">
        </activity>
        <activity
            android:name=".AddRoom"
            android:label="AutoHome - Adding Rooms"
            android:parentActivityName="com.example.tomas.android_app.MainActivity">
        </activity>
        <activity
            android:name=".AddDispo"
            android:label="AutoHome - Adding Dispositive" >
        </activity>
        <activity
            android:name=".Blind"
            android:label="AutoHome - Blind" >
        </activity>
        <activity
            android:name=".Dispositives"
            android:label="AutoHome - Dispositives"
            android:parentActivityName="com.example.tomas.android_app.MainActivity">
        </activity>
        <activity
            android:name=".Door"
            android:label="AutoHome - Door" >
        </activity>
        <activity
            android:name=".Lamp"
            android:label="AutoHome - Lamp" >
        </activity>
        <activity
            android:name=".Timer"
            android:label="AutoHome - Timer" >
        </activity>
    </application>

</manifest>